<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">

    <ImageView
        android:id="@+id/facebookIcon"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/Google"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/WhatsappIcon"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/google_icon" />

    <ImageView
        android:id="@+id/YoutubeIcon"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:contentDescription="@string/Youtube"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/FacebookIcon"
        app:layout_constraintEnd_toStartOf="@+id/ZoomIcon"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.826"
        app:srcCompat="@drawable/youtube_icon" />

    <ImageView
        android:id="@+id/ZoomIcon"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:contentDescription="@string/Zoom"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/WhatsappIcon"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.884"
        app:srcCompat="@drawable/zoom_icon" />

    <ImageView
        android:id="@+id/FacebookIcon"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginBottom="28dp"
        android:contentDescription="@string/Facebook"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/facebookIcon"
        app:layout_constraintEnd_toStartOf="@+id/WhatsappIcon"
        app:layout_constraintHorizontal_bias="0.372"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/facebook_icon" />

    <ImageView
        android:id="@+id/WhatsappIcon"
        android:layout_width="176dp"
        android:layout_height="176dp"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="232dp"
        android:contentDescription="@string/Whatsapp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/whatsapp_icon" />
</androidx.constraintlayout.widget.ConstraintLayout>