<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GmailComposeEmailActivity">

    <Button
        android:id="@+id/backToGmailButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:onClick="onClickGoToGmailTut"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/composeEmailText2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/composeEmailText2" />

    <TextView
        android:id="@+id/gmailComposeEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/compose_email"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        android:textColor="#000D53"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <ImageView
        android:id="@+id/composeButton"
        android:layout_width="170dp"
        android:layout_height="60dp"
        android:contentDescription="@string/compose_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/gmailComposeEmailText"
        app:srcCompat="@drawable/gmail_compose_button" />

    <ImageView
        android:id="@+id/downArrow"
        android:layout_width="35dp"
        android:layout_height="54dp"
        app:layout_constraintEnd_toStartOf="@+id/composeEmailText1.5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/composeEmail"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/composeEmailText1"
        app:srcCompat="@drawable/down_arrow"
        tools:layout_constraintEnd_toEndOf="parent" />

    <ImageView
        android:id="@+id/composeEmail"
        android:layout_width="367dp"
        android:layout_height="150dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/composeEmailText1.5"
        app:srcCompat="@drawable/gmail_compose_email_marked" />

    <TextView
        android:id="@+id/composeEmailText1"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:text="Tap the pen icon at the bottom right to start composing an email."
        android:textColor="#050D37"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/composeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gmailComposeEmailText" />

    <TextView
        android:id="@+id/composeEmailText1.5"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="If you don't see it press and drag down on your screen."
        android:textColor="#050D37"
        android:textSize="18sp"
        app:layout_constraintStart_toEndOf="@+id/downArrow"
        app:layout_constraintTop_toBottomOf="@id/composeEmailText1" />

    <TextView
        android:id="@+id/composeEmailText2"
        android:layout_width="360dp"
        android:layout_height="210dp"
        android:text="Tap the icons labelled by the red numbers to do the following:\n 1 Go back to the inbox.\n 2 Attach a file to the email.\n 3 Send the email.\n Tap the spaces labelled by red numbers to type in the following:\n 4 The receiver's email address.\n 5 The title of the email.\n 6 The body of the email.\n"
        android:textColor="#050D37"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/composeEmail" />

</androidx.constraintlayout.widget.ConstraintLayout>